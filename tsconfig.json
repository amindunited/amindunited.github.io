{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }]
  },
  "exclude": [
    "utils",
    "dev-utils",
    "config"
  ]
}
